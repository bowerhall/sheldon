# copy to secrets.yaml and fill in your values
apiVersion: v1
kind: Secret
metadata:
  name: sheldon-secrets
  namespace: sheldon
type: Opaque
stringData:
  # telegram bot
  TELEGRAM_TOKEN: ''

  # main llm (kimi)
  KIMI_API_KEY: ''
  LLM_PROVIDER: 'kimi'
  LLM_MODEL: 'kimi-k2-0711-preview'
  EXTRACTOR_PROVIDER: 'kimi'
  EXTRACTOR_MODEL: 'kimi-k2-0711-preview'

  # timezone
  SHELDON_TIMEZONE: 'Europe/Berlin'

  # code generation (ollama launch claude)
  # primary: nvidia nim (free tier) - get key at build.nvidia.com
  NVIDIA_API_KEY: ''
  # fallback: uses KIMI_API_KEY above
  CODER_MODEL: 'kimi-k2.5'

  # minio storage (for file upload/download)
  MINIO_ACCESS_KEY: 'sheldon-admin'
  MINIO_SECRET_KEY: ''

  # git integration (for committing/pushing code)
  GIT_TOKEN: ''  # GitHub PAT with repo scope
